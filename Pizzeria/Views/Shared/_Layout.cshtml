<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Pizzeria in forno</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: maroon" >
        <div class="container text-center">
            <div class="navbar-header" >
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pizzeria IN FORNO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" , @style= "color: black" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right">
                    <li>@Html.ActionLink("Home", "Index", "Home" , new {@style= "color: black" })</li>
                    <li>@Html.ActionLink("Menu", "Index", "Pizze", new { @style = "color: black" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
        <footer class="footer navbar-fixed-bottom text-center" style="background-color: maroon">
            <div >
                <div>
                    <p style="color: black">&copy; @DateTime.Now.Year - LAMBO</p></p>
                </div>

                <div>
                    <ul class="list-unstyled list-inline">
                        <li>
                            <a href="mailto:example@mail.it" class="btn btn-light"><span style="color: black" class="glyphicon glyphicon-envelope"></span></a>
                        </li>
                        <li>
                            <a href="https://web.telegram.org/" class="btn btn-light"><span style="color: black" class="glyphicon glyphicon-send"></span></a>
                        </li>
                        <li>
                            <a href="https://it-it.facebook.com/" class="btn btn-light"><span style="color: black" class="glyphicon glyphicon-globe"></span></a>
                        </li>
                        <li>
                            <a href="tel:0123456789" class="btn btn-light"><span style="color: black"  class="glyphicon glyphicon-phone-alt"></span></a>
                        </li>
                    </ul>
                </div>
            </div>
            
        </footer>
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
